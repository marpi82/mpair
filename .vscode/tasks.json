{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build ESP32-C6 Firmware",
            "type": "shell",
            "command": ". ${env:HOME}/esp/esp-idf/export.sh && idf.py build",
            "options": {
                "cwd": "${workspaceFolder}/software/firmware-c6"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Flash ESP32-C6",
            "type": "shell",
            "command": ". ${env:HOME}/esp/esp-idf/export.sh && idf.py -p /dev/ttyUSB0 flash",
            "options": {
                "cwd": "${workspaceFolder}/software/firmware-c6"
            },
            "group": "none",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Monitor ESP32-C6",
            "type": "shell",
            "command": ". ${env:HOME}/esp/esp-idf/export.sh && idf.py -p /dev/ttyUSB0 monitor",
            "options": {
                "cwd": "${workspaceFolder}/software/firmware-c6"
            },
            "group": "none",
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Build + Flash + Monitor C6",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build ESP32-C6 Firmware",
                "Flash ESP32-C6",
                "Monitor ESP32-C6"
            ],
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "Clean ESP32-C6",
            "type": "shell",
            "command": ". ${env:HOME}/esp/esp-idf/export.sh && idf.py fullclean",
            "options": {
                "cwd": "${workspaceFolder}/software/firmware-c6"
            },
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "Configure ESP32-C6 (menuconfig)",
            "type": "shell",
            "command": ". ${env:HOME}/esp/esp-idf/export.sh && idf.py menuconfig",
            "options": {
                "cwd": "${workspaceFolder}/software/firmware-c6"
            },
            "group": "none",
            "problemMatcher": []
        }
    ]
}
